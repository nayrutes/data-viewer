<UserControl x:Class="WorldCompanyDataViewer.Views.PostcodeAnalysisView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WorldCompanyDataViewer.Views"
             xmlns:viewModels="clr-namespace:WorldCompanyDataViewer.ViewModels" xmlns:componentmodel="clr-namespace:System.ComponentModel;assembly=WindowsBase"
             d:DataContext="{d:DesignInstance Type=viewModels:PostcodeAnalysisViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" d:Background="White">
    <UserControl.Resources>
        <CollectionViewSource x:Key="SortedClusterCollectionView" Source="{Binding ClustersCollection}">
            <CollectionViewSource.SortDescriptions>
                <componentmodel:SortDescription PropertyName="PeopleCount" Direction="Descending"/>
            </CollectionViewSource.SortDescriptions>
        </CollectionViewSource>
    </UserControl.Resources>
    <DockPanel>
        <DockPanel DockPanel.Dock="Top" Height="40">
            <Label Content="Status: " VerticalAlignment="Center"/>
            <TextBox x:Name="AnalysisStatusLabel" Text="{Binding StatusText}" VerticalContentAlignment="Center" TextWrapping="Wrap">
                <TextBox.Style>
                    <Style TargetType="TextBox">
                        <Setter Property="IsReadOnly" Value="True" />
                        <Setter Property="BorderThickness" Value="0" />
                        <Setter Property="TextWrapping" Value="Wrap" />
                    </Style>
                </TextBox.Style>
            </TextBox>
        </DockPanel>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0">
                <Decorator Height="20"/>
                <Button Content="Analyze Data" Command="{Binding AnalayzeDataForPostCodesCommand}"/>
                <DockPanel Margin="2,2,2,2">
                    <Label Content="Clusters #:"/>
                    <TextBox PreviewTextInput="IntegerValidation" Text="{Binding ClusterCount}"  Margin="2,2,2,2" HorizontalAlignment="Stretch"/>
                </DockPanel>
                <DockPanel Margin="2,2,2,2">
                    <Label Content="Max iterations #:"/>
                    <TextBox PreviewTextInput="IntegerValidation" Text="{Binding ClusterIterations}"  Margin="2,2,2,2" HorizontalAlignment="Stretch"/>
                </DockPanel>
                <Decorator Height="30"/>
                <Button Content="Get Postcodes from Data" Command="{Binding AddOrUpdatePostcodesWithCountFromPersonDataCommand}"/>
                <Button Content="Fetch Geolocations" Command="{Binding FetchGeolocationDataCommand}"/>
                <Button Content="FindClusters" Command="{Binding AnalyzePostcodesCommand}"/>
            </StackPanel>
            <TabControl Grid.Column="1" SelectedIndex="{Binding SelectedTabIndex}">
                <TabItem Header="Postcode Geodata">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <DataGrid Grid.Column="0"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              ItemsSource="{Binding PostcodesCollection}" 
                              RowDetailsVisibilityMode="VisibleWhenSelected">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Postcode" Binding="{Binding Postcode}" Width="*"/>
                                <DataGridTextColumn Header="Count" Binding="{Binding Count}" Width="*"/>
                                <DataGridTextColumn Header="Longitude" Binding="{Binding Longitude}" Width="*"/>
                                <DataGridTextColumn Header="Latitude" Binding="{Binding Latitude}" Width="*"/>
                                <DataGridTextColumn Header="IsNotAvailable" Binding="{Binding IsNotAvailable}" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        <DockPanel Grid.Column="1">
                            <Label DockPanel.Dock="Top" Content="Postcode Geodata Overview" HorizontalAlignment="Center"/>
                            <local:LabeledProperty LabelText="# valid postcodes" Content="{Binding ValidPostcodesCount}"  DockPanel.Dock="Top"/>
                            <local:LabeledProperty LabelText="# invalid postcodes" Content="{Binding NotValidPostcodesCount}"  DockPanel.Dock="Top"/>
                            <Label DockPanel.Dock="Top" Content="People with invalid code" HorizontalAlignment="Center"/>

                            <DataGrid AutoGenerateColumns="True"
                                EnableRowVirtualization="True"
                                IsReadOnly="True"
                                ItemsSource="{Binding InvalidPostcodePeople}" 
                                Margin="3,3,3,3"  RowDetailsVisibilityMode="VisibleWhenSelected">    
                            </DataGrid>
                        </DockPanel>
                    </Grid>
                </TabItem>
                <TabItem Header="Clusters">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <DataGrid Grid.Column="0"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              ItemsSource="{Binding Source={StaticResource SortedClusterCollectionView}}"
                              SelectedItem="{Binding SelectetClusterViewModel}" 
                              RowDetailsVisibilityMode="VisibleWhenSelected">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Cluster ID" Binding="{Binding Id}" Width="70"/>
                                <DataGridTextColumn Header="Amount of People" Binding="{Binding PeopleCount}" Width="*"/>
                                <DataGridTextColumn Header="Amount of Postcodes" Binding="{Binding PostcodeCount}" Width="*"/>
                                <DataGridTextColumn Header="Clostest Postcode" Binding="{Binding ClostestPostcode}" Width="*"/>
                                <DataGridTextColumn Header="Admin District" Binding="{Binding ClostestTown}" Width="*"/>
                                <DataGridTextColumn Header="Longitude" Binding="{Binding Longitude}" Width="70"/>
                                <DataGridTextColumn Header="Latitude" Binding="{Binding Latitude}" Width="70"/>
                                <!--<DataGridTextColumn Header="Inspect" Binding="{Binding ?}" Width="50"/>-->
                            </DataGrid.Columns>
                        </DataGrid>
                        <DockPanel Grid.Column="1" DataContext="{Binding SelectetClusterViewModel}">
                            <Label DockPanel.Dock="Top" Content="Cluster Detail View"/>
                            <local:LabeledProperty LabelText="Cluster Id" Content="{Binding Id}"  DockPanel.Dock="Top"/>
                            <local:LabeledProperty Content="{Binding PeopleCount}"  DockPanel.Dock="Top"/>
                            <local:LabeledProperty Content="{Binding PostcodeCount}"  DockPanel.Dock="Top"/>
                            <local:LabeledProperty Content="{Binding ClostestPostcode}"  DockPanel.Dock="Top"/>
                            <local:LabeledProperty LabelText="Closest County" Content="{Binding ClostestTown}"  DockPanel.Dock="Top"/>
                            <local:LabeledProperty Content="{Binding Longitude}"  DockPanel.Dock="Top"/>
                            <local:LabeledProperty Content="{Binding Latitude}"  DockPanel.Dock="Top"/>
                            <Label DockPanel.Dock="Top" Content="People in cluster" HorizontalAlignment="Center"/>

                            <DataGrid AutoGenerateColumns="True"
                                EnableRowVirtualization="True"
                                IsReadOnly="True"
                                ItemsSource="{Binding PersonCollection}" 
                                Margin="3,3,3,3" RowDetailsVisibilityMode="VisibleWhenSelected">
                            </DataGrid>
                        </DockPanel>
                    </Grid>

                </TabItem>
            </TabControl>
        </Grid>
    </DockPanel>
</UserControl>
